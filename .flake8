[flake8]
max-line-length = 88
extend-ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    E722   # do not use bare except
exclude = 
    __pycache__,
    .git,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info
per-file-ignores =
    __init__.py:F401
    tests/*:E501
max-complexity = 10
